<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!--Register HandlerMapping-->
    <bean class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
        <property name="mappings">
            <props>
                <prop key="/student/*.do">studentController</prop>
            </props>
        </property>
    </bean>

    <!--Define method name resolver for multi action controller-->
    <bean id="propertiesMethodNameResolver"
          class="org.springframework.web.servlet.mvc.multiaction.PropertiesMethodNameResolver">
        <property name="mappings">
            <props>
                <prop key="/student/create.do">createStudent</prop>
                <prop key="/student/update.do">updateStudent</prop>
                <prop key="/student/get.do">getStudent</prop>
                <prop key="/student/delete.do">deleteStudent</prop>
            </props>
        </property>
    </bean>

    <bean id="studentController" class="pers.xiaoming.javaweb.ssm_xml.controller.StudentController">
        <property name="methodNameResolver" ref="propertiesMethodNameResolver"/>
    </bean>
</beans>